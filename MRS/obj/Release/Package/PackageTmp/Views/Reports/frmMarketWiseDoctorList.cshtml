                            <option value="DEGREE">Degree</option>
                            <option value="DESIGNATION">Designation</option>
                            <option value="SPECIALIZATION">Specialization</option>
                            <option value="POTENTIAL_CATEGORY">Potential Category</option>
                        </select>
                    </div>
                </div>
            </div>
        </form>
    </div>
