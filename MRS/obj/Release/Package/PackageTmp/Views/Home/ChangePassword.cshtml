
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Changed Password
                @Html.Hidden("userId", Session["UserId"])
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-2">
                        <label> Old Password</label>
                    </div>
                    <div class="col-xs-2">
                        <input type="password" id="OldPassword" class="txtBox" name="OldPassword" maxlength="50" />
                        </div>
                    <div class="col-xs-2">
                        <label> New Password</label>
                    </div>
                    <div class="col-xs-2">
                        <input type="password" id="Password" class="txtBox" name="Password" maxlength="50" />
                    </div>
                    <div class="col-xs-2">
                        <input id="btnSave" type="button" value="Save" class="btn btn-default btn-sm" />
                    </div>
                    <div class="col-xs-2">
                    </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
    });

    $("#btnSave").click(function() {

        $.ajax({
            type: "POST",
            url: '@Url.Action("ChangePassword", "Home")',
            data: { userId: $('#userId').val(), password: $('#Password').val() },
            success: function(data) {
                window.location.replace('@Url.Action("Index","Home")');
            },
            error: function() {

            }
            });
    });
</script>
