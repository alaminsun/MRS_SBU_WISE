    @*On Page Load Event*@
<script>

    // create DatePicker from input HTML element
    $(".datePicker").kendoDatePicker({
        format: "dd/MM/yyyy",
        value: new Date(),
        editable: false,
        change: function () {
            changeStatus = 1;
        }
    });

    var eleDiv = document.getElementById("chartGroup");

    $("#btnReset").click(function () {
        $('#MessageText').html('');
        $(".txtBox").val("");
        location.reload();
    });

    var d = new Date();

    var model = { "FromDate": "", "ToDate": "" };

    var dd = d.getDate();
    var mm = d.getMonth() + 1; //January is 0!
    var yyyy = d.getFullYear();
    if (dd < 10) {
        dd = '0' + dd;
    }
    if (mm < 10) {
        mm = '0' + mm;
    }
    var today = dd + '/' + mm + '/' + yyyy;

    model.FromDate = "01/01/" + d.getFullYear();
    model.ToDate = today;
    createChart(model);

    function createChart(model) {

        //if (model.FromDate.length != 0 || model.ToDate.length != 0) {

        if (model.FromDate != null || model.ToDate != null) {

            //**************   Chart 1 Begin *****************//

            $("#chart").kendoChart({
                renderAs: "canvas",
                transitions: false,
                dataSource: {
                    transport: {
                        read: {
                            url: "@Url.Action("GetMonthlyInvestmentComparison","DashboardSales")",
                            type: 'GET',
                            dataType: "json"
                        }
                    },
                },
                chartArea: {
                    //width: 270,
                    height: 260
                },
                title: {
                    text: "Month Wise Expense Comparison",
                    font: "bold 20px Arial,bold,Helvetica,sans-serif",
                    color: "#000000"
                },
                legend: {
                    position: "top"
                },
                seriesDefaults: {
                    type: "column"
                },
                series:
                [{
                    field: "PREV_YEAR_MON_WS_EXP",
                    name: "Previous Year"
                }, {
                    field: "CUR_YEAR_MON_WS_EXP",
                    name: "Current Year"
                }],
                categoryAxis: {
                    field: "MONTH_NAME",
                    labels: {
                        rotation: -90
                    },
                    majorGridLines: {
                        visible: false
                    }
                },
                valueAxis: {
                    labels: {
                        template: "#= FormatLongNumber(value) #"
                    },
                },
                tooltip: {
                    visible: true,
                    template: "#= category # - #= kendo.format('{0:P}', FormatLongNumber(value))#"
                }
            });

            //**************   Chart 2 Begin *****************//

            $("#chart2").kendoChart({
                renderAs: "canvas",
                transitions: false,
                dataSource: {
                    transport: {
                        read: {
                            url: "@Url.Action("GetMonthWiseLeaderSts", "DashboardSales")",
                        type: 'GET',
                        dataType: "json",
                        data: model
                    }
                },
            },
                chartArea: {
                height: 260
                },
            theme: "default",
            title: {
                text: "Month Wise Market Non Leader %",
                font: "bold 20px Arial,Helvetica,sans-serif",
                color: "#000000"
            },
            legend: {
                    position: "top"
            },
            seriesDefaults: {
                    type: "line",
                    style: "smooth",
                    },
            series:
                [{
                    field: "PREV_YEAR_MON_WS_EXP",
                    name: "Year - " + (yyyy -1)
                }, {
                    field: "CUR_YEAR_MON_WS_EXP",
                    name: "Year - " + yyyy
                }],
            categoryAxis: {
                field: "MONTH_NAME",
                labels: {
                    rotation: -90

                },
                majorGridLines: {
                        visible: false
                }
            },
            valueAxis: {
                    labels: {
                        template: "#= FormatLongNumber(value) #"
                    },
                },
            tooltip: {
                    visible: true,
                    template: "#= category # - #= kendo.format('{0:P}', FormatLongNumber(value))# %"
            }
        });

            //**************   Chart 4 Begin *****************//

            $("#chart4").kendoChart({
                //renderAs: "canvas",
                transitions: false,
                theme: "nova",
                dataSource: {
                    transport: {
                        read: {
                            url: "@Url.Action("GetCommitmentInfoDashBoard", "DashboardSales")",
                            type: 'GET',
                            dataType: "json",
                            data: model
                        }
                    },
                },
                title: {
                    text: "Commitment Meet Up Status",
                    font: "bold 20px Arial,Helvetica,sans-serif",
                    color: "#000000"
                },
                plotArea: {
                    background: "white",
                    margin: 0
                },
                legend: {
                    position: "top"
                },
                chartArea: {
                    background: ""
                },
                seriesDefaults: {
                    type: "pie",
                    labels: {
                        visible: true,
                        font: "6px",
                        template: "#= category # - #= kendo.format('{0:P}', value)#",
                        position: "insideEnd"
                    }
                },
                chartArea: {
                    height: 260,
                    margin: 0
                },
                series: [{
                    field: "NO_OF_TRANSACTION",
                    categoryField: "COMMITMENT_MEETUP",
                    padding: 0,
                }],
                tooltip: {
                    visible: true,
                    template: "#= category # - #= kendo.format('{0:P}', percentage) %#"
                }
            });


            //**************   Chart 5 Begin *****************//

            $("#chart5").kendoChart({
                renderAs: "canvas",
                transitions: false,
                dataSource: {
                    transport: {
                        read: {
                            url: "@Url.Action("GetDesignationWiseSummery", "DashboardSales")",
                            type: 'GET',
                            dataType: "json",
                            data: model
                        }
                    },
                },
                chartArea: {
                    height: 260
                },
                theme: "flat",
                title: {
                    text: "Monthly Ceiling VS Expense",
                    font: "bold 20px Arial,Helvetica,sans-serif",
                    color: "#000000"
                },
                legend: {
                    position: "top"
                },
                seriesDefaults: {
                    type: "column",
                    spacing: 0,
                    gap: 0.5,
                },
                series:
                    [{
                        field: "TOT_CEILING_AMOUNT",
                        name: "Total Ceiling Amount"
                    }, {
                        field: "TOT_GRP_EXP",
                        name: "Total Expense"
                    }],
                categoryAxis: {
                    field: "GRP_DSIG_NAME",
                    labels: {
                        rotation: -90

                    },
                    majorGridLines: {
                        visible: false
                    }
                },
                valueAxis: {
                    labels: {
                        template: "#= FormatLongNumber(value) #"
                    },
                },
                tooltip: {
                    visible: true,
                    template: "#= category # - #= kendo.format('{0:P}', FormatLongNumber(value))#"
                }
            });

            //**************   Chart 6 Begin *****************//

            $("#chart6").kendoChart({
                renderAs: "canvas",
                transitions: false,
                dataSource: {
                    transport: {
                        read: {
                            url: "@Url.Action("GetMonthWiseMarketShare", "DashboardSales")",
                            type: 'GET',
                            dataType: "json",
                            data: model
                        }
                    },
                },
                chartArea: {
                    height: 260
                },
                theme: "default",
                title: {
                    text: "Month Wise National Market Share",
                    font: "bold 20px Arial,Helvetica,sans-serif",
                    color: "#000000"
                },
                legend: {
                    position: "top"
                },
                seriesDefaults: {
                    type: "line",
                    style: "smooth",
                },
                series:
                [{
                    field: "PREV_YEAR_MON_WS_EXP",
                    name: "Year - " + (yyyy -1)
                }, {
                    field: "CUR_YEAR_MON_WS_EXP",
                    name: "Year - " + yyyy
                }],
                categoryAxis: {
                    field: "MONTH_NAME",
                    labels: {
                        rotation: -90

                    },
                    majorGridLines: {
                        visible: false
                    }
                },
                valueAxis: {
                    labels: {
                        template: "#= FormatLongNumber(value) #"
                    },
                },
                tooltip: {
                    visible: true,
                    template: "#= category # - #= kendo.format('{0:P}', FormatLongNumber(value)) %#"
                }
            });


            //**************   Chart 3 Begin *****************//

            $("#chart3").kendoChart({
                //renderAs: "canvas",
                transitions: false,
                theme: "flat",
                dataSource: {
                    transport: {
                        read: {
                            url: "@Url.Action("GetDoctorLeaderDashBoard", "DashboardSales")",
                        type: 'GET',
                        dataType: "json",
                        data: model
                    }
                },
            },             
            title: {
                    text: "Doctor's Leader / Non Leader Status",
                    font: "bold 17px Arial,Helvetica,sans-serif",
                    color: "#000000"
            },
            legend: {
                    position: "top"
            },
            chartArea: {
                    background: ""
            },
            plotArea: {
                    background: "white"
            },
            seriesDefaults: {
                    type: "pie",
                    labels: {
                    visible: true,
                    font: "6px",
                    background: "transparent",
                    template: "#= category # - #= kendo.format('{0:P}', value)#",
                    position: "insideEnd"
                    }

            },
            chartArea: {
                height: 260
            },
            series: [{
                field: "NO_OF_DOCTOR",
                categoryField: "LEADER_NON_LEADER",
                padding: 0,
            }],
            tooltip: {
                visible: true,
                template: "#= category # - #= kendo.format('{0:P}', percentage) #"
            }
        });

        }
    }

    $(window).on("resize", function () {
        kendo.resize($(".chart-wrapper"));
    })

    function FormatLongNumber(value) {
        if (value == 0) {
            return 0;
        }
        else {

            // hundreds
            if (value <= 999) {
                return value;
            }
                // thousands
            else if (value >= 1000 && value <= 99999) {
                return (value / 1000) + ' T';
            }
                // millions
            else if (value >= 100000 && value <= 9999999) {
                return (value / 100000) + ' L';
            }
                // billions
            else if (value >= 10000000) {
                return (value / 10000000) + ' C';
            }
            else
                return value;
        }
    }

    $(document).ready(createChart);
    $(document).bind("kendo:skinChange", createChart);
</script>

@*Button Click Event*@
<script>
    $("#btnShowReport").click(function () {

        //************************* DEFINE DETAIL KENDO GRID ******************************//
        var model = { "FromDate": "", "ToDate": "" };

        model.FromDate = $("#FromDate").val();
        model.ToDate = $("#ToDate").val();
        createChart(model);
    });
</script>