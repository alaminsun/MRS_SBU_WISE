    <div class="row box box-primary">
        <div class="row">
            <div class="col-sm-2">
                <label class="pull-right">From Date:</label>
            </div>
            <div class="col-sm-2">
                <input type="text" id="FromDate" name="FromDate" tabindex="1" class="txtBox datePicker" required="required" />
            </div>
            <div class="col-sm-2">
                <label class="pull-right">To Date:</label>
            </div>
