    var DosageGridDataSource = new kendo.data.DataSource({
        batch: true,
        schema: {
            model: {
                id: "DOSAGE_FORM_CODE",
                fields: {
                    DOSAGE_FORM_CODE: { editable: false },
                    DOSAGE_FORM_NAME: { editable: false }
                }
