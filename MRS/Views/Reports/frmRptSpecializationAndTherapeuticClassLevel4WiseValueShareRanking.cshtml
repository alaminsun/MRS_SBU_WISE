        if (keycode == '13') {
            ListOfValueOpeningBankGridEvent('REGIONGrid');
            REGIONIDWindow.close();
        }
        else if (keycode == '27') {
            REGIONIDWindow.close();
        }
        event.stopPropagation();
    });





    //To Bring Data from List of Value Grid to Main Page
    function ListOfValueOpeningBankGridEvent(gridName) {
