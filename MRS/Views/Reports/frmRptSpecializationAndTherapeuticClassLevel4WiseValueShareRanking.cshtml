    //********************************************** END of TC_L4 POP UP Window ****************************************************//


    //********************************************** REGION POP UP Window ****************************************************

    //*********** DEFINE REGION Window ***************************** //

    var REGIONIDWindow = $('#REGIONIDWindow').kendoWindow({
        actions: ["Minimize", "Maximize", "Close"],
