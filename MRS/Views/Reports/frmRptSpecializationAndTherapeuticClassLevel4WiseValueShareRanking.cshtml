    //Open PopUp by pressing F9 key
    $(document.body).keyup(function (e) {
        if ($("#REGION_NAME").is(":focus")) {
            if (e.keyCode == 120) {
                $("#divLoading").show();
                $.ajax({
                    url: '@Url.Action("LocationList", "Reports")',
                    type: "GET",
                    dataType: "JSON",
