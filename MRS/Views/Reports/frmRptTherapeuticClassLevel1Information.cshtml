@{
    ViewBag.Title = @ViewBag.formTiltle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.formTitle</title>

@using (Html.BeginForm("frmRptTherapeuticClassLevel1Information", "Reports", FormMethod.Post, new { target = "_blank", name = "H1Form", id = "H1Form" }))
{
    <div class="row box box-danger">
        <div class="col-lg-3">
            <span id="MessageText" class="pull-right"></span>
        </div>
        <div class="col-lg-3">
            <label style="font-size: medium; margin-top: 15px">Paper: A4, Portrait</label>
        </div>
        <div class="col-lg-2" style="margin-top: 15px">
            <input type="radio" class="iradio_flat-green" id="rptPDF" name="ReportType" value="PDF" style="width: 2%; margin-left: 40px;" tabindex="3" checked="checked" />
            <label style="font-size: small; font-weight: bold; color: #00688B;">PDF</label>
            <input type="radio" id="rptExcel" name="ReportType" value="EXCEL" style="width: 2%;" tabindex="4" />
            <label style="font-size: small; font-weight: bold; color: #00688B;">EXCEL</label>
        </div>
        <div class="col-lg-4">
            <button type="button" id="btnReset" class=" btn bg-olive btn-flat margin pull-right" onclick="Reset();"><i class="glyphicon glyphicon-refresh"></i> Reset</button>
            <button type="submit" id="btnShowReport" class=" btn bg-olive btn-flat margin pull-right"><i class="glyphicon glyphicon-save"></i> Display Report</button>
        </div>
    </div>
    @*<input type="hidden" id="ReportName" name="ReportName" value="TherapeuticClassLevel1" />*@

    <div class="row box box-primary">
        <form class="form-horizontal">
            <div class="box-body">
                    <div class="form-group col-lg-6 panel-danger">
                        <div class="col-lg-4">
                            <label>Therapeutic Class</label>
                        </div>
                        <div class="col-lg-6">
                            <select id="ReportName" name="ReportName" class="txtBox" tabindex="5">
                                <option value="TherapeuticClassLevel1">Therapeutic Class Level-1</option>
                                <option value="TherapeuticClassLevel2">Therapeutic Class Level-2</option>
                                <option value="TherapeuticClassLevel3">Therapeutic Class Level-3</option>
                                <option value="TherapeuticClassLevel4">Therapeutic Class Level-4</option>
                            </select>
                        </div>
                    </div>
                </div>
        </form>
    </div>   
}


<script type="text/javascript">
    // create DatePicker from input HTML element
    $(".datePicker").kendoDatePicker({
        format: "dd/MM/yyyy",
        value: new Date(),
        //max: new Date()
        editable: false,
        change: function () {
            
        }
    });

    $(".datePickerold").kendoDatePicker({
        format: "dd/MM/yyyy",
        value: "01/01/2000",
        //max: new Date()
        editable: false,
        change: function () {
            
        }
    });
    $("#btnReset").click(function () {
        $('.FormBody input[type=text]').val('');
        $('#MessageText').html('');
        //$('.FormBody .datePicker').val(getISODateTime(new Date()));
        $('#btnSubmit').attr('disabled', false);
        $('#btnDelete').attr('disabled', false);
        $(".txtBox").val("");
        //location.reload();
    });
</script>