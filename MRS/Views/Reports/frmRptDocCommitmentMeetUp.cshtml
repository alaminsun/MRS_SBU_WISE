@{
    ViewBag.Title = @ViewBag.formTiltle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.formTitle</title>
@using (Html.BeginForm("frmRptDocCommitmentMeetUp", "Reports", FormMethod.Post, new { target = "_blank", name = "H1Form", id = "H1Form" }))
{
    <div class="row box box-danger">
        <div class="col-lg-3">
            <span id="MessageText" class="pull-right"></span>
        </div>
        <div class="col-lg-3">
            <label style="font-size: medium; margin-top: 15px">Paper: Legal, Landscape</label>
        </div>
        <div class="col-lg-2" style="margin-top: 15px">
            <input type="radio" class="iradio_flat-green" id="rptPDF" name="ReportType" value="PDF" style="width: 2%; margin-left: 40px;" checked="checked" />
            <label style="font-size: small; font-weight: bold; color: #00688B;">PDF</label>
            <input type="radio" id="rptExcel" name="ReportType" value="EXCEL" style="width: 2%;" tabindex="4" />
            <label style="font-size: small; font-weight: bold; color: #00688B;">EXCEL</label>
        </div>
        <div class="col-lg-4">
            <button type="button" id="btnReset" class=" btn bg-olive btn-flat margin pull-right" onclick="Reset();"><i class="glyphicon glyphicon-refresh"></i> Reset</button>
            <button type="submit" id="btnShowReport" class=" btn bg-olive btn-flat margin pull-right"><i class="glyphicon glyphicon-save"></i> Generate Report</button>
        </div>
    </div>

    <div class="row box box-primary">
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group col-lg-6 panel-danger">
                    <div class="form-group">
                        <div class="col-lg-5">
                            <label class="pull-right">From Date:</label>
                        </div>
                        <div class="col-lg-4">
                            <input type="text" id="FromDate" name="FromDate" tabindex="1" class="txtBox datePicker" required="required" />
                        </div>
                    </div><br />
                    <div class="form-group">
                        <div class="col-lg-5">
                            <label class="pull-right">To Date:</label>
                        </div>
                        <div class="col-lg-4">
                            <input type="text" id="ToDate" name="ToDate" tabindex="2" class="txtBox datePicker" required="required" />
                        </div>
                    </div><br />
                </div>
            </div>
        </form>
    </div>

    <script type="text/javascript">
        // create DatePicker from input HTML element
        $(".datePicker").kendoDatePicker({
            format: "dd/MM/yyyy",
            value: new Date(),
            //max: new Date()
            editable: false,
            change: function () {
                changeStatus = 1;
            }
        });

        //End of Document.Ready()
        $("#btnReset").click(function () {
            $('#MessageText').html('');
            $(".txtBox").val("");
            location.reload();
        });
    </script>
}
